rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para archivos de chat
    match /chats/{conversationId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Reglas para CVs y otros archivos de usuario
    match /cvs/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para imágenes de empleos
    match /jobs/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reglas para imágenes de alquileres
    match /rents/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reglas para imágenes de publicidad
    match /ads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Reglas para avatares de usuario
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
